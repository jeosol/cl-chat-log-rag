# Common Lisp Chat Log Analysis Project

NAME=cl-chat-log

venv:
	uv venv --python 3.12.0 /tmp/venv/${NAME}

source-env:
	source /tmp/venv/${NAME}/bin/activate

install:
	uv pip install -r requirements.txt

install-notebook:
	uv pip install notebook; pip install --user ipykernel; python -m ipykernel install --user --name=${NAME}

deactivate:
	deactivate

#run:
#	streamlit run streamlit/app/main_page.py

# start jupyter server in emacs
# M-x ein:jupyter-server-start.
